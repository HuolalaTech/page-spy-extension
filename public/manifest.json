{
  "manifest_version": 3,
  "name": "PageSpy",
  "version": "1.0.7",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/isolated.js"
      ],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "sdk/index.min.js",
        "sdk/plugins/data-harbor.min.js",
        "sdk/plugins/rrweb.min.js",
        "content/index.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "sw/index.js"
  },
  "action": {
    "default_title": "PageSpy",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sdk/index.min.js",
        "sdk/plugins/data-harbor.min.js",
        "sdk/plugins/rrweb.min.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}